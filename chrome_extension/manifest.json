{
    "manifest_version": 2,
    "name": "Trial",
    "description": "Slowly",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Click here!"
    },
    "icons": {
        "64": "icon.png"
    },
    "background": {
        "scripts": ["jquery-1.11.3.min.js", "background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["jquery-1.11.3.min.js", "myScript.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "https://www.googleapis.com/language/translate/*",
        "notifications",
        "storage"
    ]

}

